<div class="content">
  <h1>Forgot your password?</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class: 'contact-form' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="form-group submit">
      <%= f.button "Send me reset password instructions" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>
